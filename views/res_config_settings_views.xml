<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pricelist.manager</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='website']" position="inside">
                <h2>Selector de Listas de Precios</h2>
                <div class="row mt16 o_settings_container" id="pricelist_visibility_manager_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_pricelist_selector_active"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_pricelist_selector_active"/>
                            <div class="text-muted">
                                Muestra un selector de listas de precios en las páginas de Tienda y Producto.
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('is_pricelist_selector_active', '=', False)]}">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="pricelist_visibility_group_id"/>
                            <field name="pricelist_visibility_group_id" class="o_light_label"/>
                            <div class="text-muted">
                                Define qué grupo de usuarios puede ver y usar el selector.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>